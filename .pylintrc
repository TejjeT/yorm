[MESSAGES CONTROL]

# I0011: Locally disabling warning
# W0142: Used * or ** magic
# W0511: TODO in comments
# RO903: Too few public methods
# R0904: Too many public methods
# E1101: Module ... has no ... memeber
# C0103: Invalid constant name
# W0603: Using the global statement
# R0901: Too many ancestors
disable=I0011,W0142,W0511,R0903,R0904,E1101,C0103,W0603,R0901


[SIMILARITIES]

min-similarity-lines=4

ignore-comments=yes

ignore-docstrings=yes

ignore-imports=yes


[FORMAT]

max-line-length=80

ignore-long-lines=^.*((https?:)|(pragma:)|(TODO:)).*$


[REPORTS]

reports=no

msg-template={msg_id}:{line:3d},{column}:{msg}
